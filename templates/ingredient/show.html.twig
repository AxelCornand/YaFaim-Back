{% extends 'base.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
<div class="container">
    <h1>Ingrédient</h1>
            <a href="{{ path('app_ingredient_index') }}" class="btn btn-sm btn-success">Revenir à la liste</a>

            <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Date d'Expiration</th>
                <td>{{ ingredient.expirationDate ? ingredient.expirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ ingredient.slug }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('ingredient/_delete_form.html.twig') }}
    </div>
{% endblock %}
